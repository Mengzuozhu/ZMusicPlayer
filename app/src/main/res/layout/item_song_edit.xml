<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey">

    <RelativeLayout
        android:id="@+id/layout_edit_song_num"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_edit_item_song_num"
            style="@style/StyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/undefined"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_edit_item_song_name"
        style="@style/StyleTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/undefined"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/layout_edit_song_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_edit_item_song_artist"
        style="@style/StyleTextView"
        android:layout_marginStart="0dp"
        android:text="@string/undefined"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_edit_item_song_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_item_song_name" />

    <ImageView
        android:id="@+id/iv_edit_del"
        style="@style/StyleListRightItem"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>