<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_control_progress"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/colorDark"
    tools:context=".ui.MusicControlFragment">


    <TextView
        android:id="@+id/tv_song_name"
        style="@style/StyleTextView"
        android:text="@string/undefined"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_duration"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_artist"
        style="@style/StyleTextView"
        android:layout_marginTop="0dp"
        android:text="@string/undefined"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_duration"
        app:layout_constraintTop_toBottomOf="@+id/tv_song_name" />

    <ImageView
        android:id="@+id/iv_play_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_play_pause" />

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_duration"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/iv_play_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_play_pause" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cpb_background_progressbar_color="@color/colorWhite"
        app:cpb_background_progressbar_width="8dp"
        app:cpb_progressbar_color="@color/colorDarkBlue"
        app:cpb_progressbar_width="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_progress"
        style="@style/StyleTextView"
        android:text="@string/undefined"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/progress_song"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_duration"
        style="@style/StyleTextView"
        android:layout_marginBottom="8dp"
        android:text="@string/undefined"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progress_song" />

</android.support.constraint.ConstraintLayout>