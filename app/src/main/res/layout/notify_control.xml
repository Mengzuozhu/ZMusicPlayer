<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_notify_control"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/colorDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_notify_song_name"
            style="@style/StyleTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/undefined"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_notify_close"
            android:layout_width="@dimen/image_size_24"
            android:layout_height="@dimen/image_size_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <include layout="@layout/layout_song_control" />


    </RelativeLayout>

</RelativeLayout>