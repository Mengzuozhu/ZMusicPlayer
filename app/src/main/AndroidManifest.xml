<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mzz.zmusicplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".MusicApplication"
        android:allowBackup="true"
        android:icon="@drawable/music"
        android:label="@string/app_name"
        android:roundIcon="@drawable/music"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MusicSearchActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SongPickerActivity"
            android:label="添加歌曲" />
        <activity android:name=".ui.SongEditActivity" />

        <service android:name=".song.PlaybackService">
            <intent-filter>
                <action android:name="com.mzz.zmusicplayer.ACTION.PLAY_TOGGLE" />
                <action android:name="com.mzz.zmusicplayer.ACTION.PLAY_NEXT" />
                <action android:name="com.mzz.zmusicplayer.ACTION.PLAY_LAST" />
                <action android:name="com.mzz.zmusicplayer.ACTION.STOP_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>